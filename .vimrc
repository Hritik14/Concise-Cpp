" Just save me from all the hassels. Helping you to make your vim life better
set nonumber
set nocompatible     " set compatiblity to vim only

#enable systex highlight
syntax on

#Show partial commands in the last line of the screen
set showcmd

#set your autoindentation
set autoindent

#autocomplete wildcard
set wildmenu   

#autoshows the match of brackets
set showmatch   

set incsearch                         " search as characters are entered
colorscheme badwolf                   "good colour scheme 
set showcmd                           " show command in bottom bar
set modelines=0                       " turn of modelines
set backspace=indent,eol,start        "Fixes common backspace problems
set encoding=utf-8                    " Encoding
